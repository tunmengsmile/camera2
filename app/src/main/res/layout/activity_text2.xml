<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TextActivity"
    >

    <TextView

        android:gravity="center"
        android:padding="10dp"
       android:layout_centerInParent="true"
        android:id="@+id/module_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera2 拍照"
        android:visibility="visible"
        />
    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@+id/module_picture"
        android:id="@+id/module_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera2 人脸检测"
        android:visibility="visible"
        />

    <TextView
        android:visibility="visible"
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@+id/module_face"
        android:id="@+id/module_camera2_mediaRecorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera2视频录制"
        />

